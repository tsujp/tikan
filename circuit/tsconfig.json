{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "plugins": [],
    "lib": [
      "dom",
      "esnext"
    ],
    "include": [
      "./src/**/*"
    ],
      "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
  }
}

